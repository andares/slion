{
    "name": "slion/slion",
    "description": "a php framework base slim from lion project",
    "keywords": ["framework"],
    "license": "LGPL3.0",
    "authors": [
        {
            "name": "Andares Merigold",
            "email": "andares@outlook.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "ext-msgpack": "*",
        "tracy/tracy": "^2.4",
        "slim/slim": "^3.1",
        "kevinlebrun/colors.php": "^1.0"
    },
    "autoload": {
        "files": ["src/bootstrap.php"]
    },
    "scripts": {
        "post-update-cmd": [
            "php -r \"copy('vendor/slion/slion/chord', 'chord');\"",
            "chmod +x chord"
        ]
    },
    "bin": ["chord"],
    "minimum-stability": "stable"
}
